{
    "name": "@waveform-viewer/app-vscode",
    "displayName": "Waveform Viewer",
    "description": "View VCD and FST waveform files natively in VSCode",
    "icon": "media/icon.png",
    "version": "0.3.10",
    "private": false,
    "publisher": "woshiren",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nanjo712/Waveform-Viewer.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Visualization"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "customEditors": [
            {
                "viewType": "waveformViewer.waveformEditor",
                "displayName": "Waveform Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.vcd"
                    },
                    {
                        "filenamePattern": "*.fst"
                    }
                ],
                "priority": "default"
            }
        ],
        "commands": [
            {
                "command": "waveformViewer.toggleChiselHierarchy",
                "title": "Toggle Chisel Hierarchy",
                "category": "Waveform Viewer"
            },
            {
                "command": "waveformViewer.loadPlugin",
                "title": "Load Format Plugin",
                "category": "Waveform Viewer"
            },
            {
                "command": "waveformViewer.zoomIn",
                "title": "Zoom In",
                "category": "Waveform Viewer"
            },
            {
                "command": "waveformViewer.zoomOut",
                "title": "Zoom Out",
                "category": "Waveform Viewer"
            },
            {
                "command": "waveformViewer.zoomFit",
                "title": "Zoom to Fit",
                "category": "Waveform Viewer"
            }
        ]
    },
    "scripts": {
        "build": "node esbuild.mjs",
        "watch": "node esbuild.mjs --watch",
        "package": "npx @vscode/vsce package --no-dependencies"
    },
    "dependencies": {
        "@waveform-viewer/core": "*",
        "@waveform-viewer/react-ui": "*"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "esbuild": "^0.25.0"
    }
}